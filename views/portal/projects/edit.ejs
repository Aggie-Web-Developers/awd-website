<%- include('../partials/header') %> <% var dateFormatted= ""; if
(project.start_date) { var temp_date = new Date(project.start_date);
dateFormatted = temp_date.toISOString().split('T')[0]; } %>
<div class="container">
	<div class="row mt-5">
		<div class="col-12">
			<h1>Edit Project</h1>
		</div>
	</div>
</div>
<div class="container">
	<div class="row justify-content-center my-5 px-md-0 px-5">
		<div class="col-xs-10 col-md-10 form-container p-4">
			<h2 class="page-title">Edit Project</h2>
			<form
				id="frm"
				action="/portal/projects/edit/<%= project.id %>?_method=PUT"
				method="POST"
			>
				<div class="form-group">
					<label for="txtName">Project Name</label>
					<input
						type="text"
						class="form-control"
						id="txtName"
						name="txtName"
						value="<%= project.name%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtWork">Work Done</label>
					<input
						type="text"
						class="form-control"
						id="txtWork"
						name="txtWork"
						value="<%= project.work_done%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtStatus">Project Status</label>
					<input
						type="text"
						class="form-control"
						id="txtStatus"
						name="txtStatus"
						value="<%= project.status%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtManager">Manager</label>
					<input
						type="text"
						class="form-control"
						id="txtManager"
						name="txtManager"
						value="<%= project.manager%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtTestLink">Live Url</label>
					<input
						type="text"
						class="form-control"
						id="txtTestLink"
						name="txtTestLink"
						value="<%= project.test_url%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtGithub">Github Url</label>
					<input
						type="text"
						class="form-control"
						id="txtGithub"
						name="txtGithub"
						value="<%= project.github_url%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtImageLink">Project Image</label>
					<input
						type="text"
						class="form-control"
						id="txtImageLink"
						name="txtImageLink"
						value="<%= project.image_url%>"
					/>
				</div>
				<div class="form-group">
					<label for="txtDate">Project Start Date</label>
					<input
						type="date"
						class="form-control"
						id="txtDate"
						name="txtDate"
						value="<%=dateFormatted%>"
					/>
				</div>
				<div class="form-check mt-3">
					<input type="checkbox" class="form-check-input checkmark"
					id="chkDeleted" name="chkDeleted" <%=project.deleted == true ?
					"checked" : ""%>>
					<label class="form-check-label" for="chkDeleted">Deleted?</label>
				</div>
				<button type="submit" class="btn btn-contact btn-contact-slim mt-4">
					Submit
				</button>
			</form>
		</div>
	</div>
</div>
<script src="/scripts/portal/projects/edit.js"></script>
<%- include('../partials/footer') %>
