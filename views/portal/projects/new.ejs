<%- include('../partials/header') %>
	<div class="container">
		<div class="row mt-5">
			<div class="col-12">
				<h1>Add New Sponsor</h1>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row justify-content-center my-5 px-md-0 px-5">
			<div class="col-xs-10 col-md-10 form-container p-4">
				<h3 class="font-weight-bold mb-3">Create Sponsor</h3>
				<form id="frm" action="/portal/sponsors/new" method="POST">
					<div class="form-group">
						<label for="txtName">Sponsor Name</label>
						<input type="text" class="form-control" id="txtName" name="txtName">
					</div>
					<div class="form-group">
						<label for="txtReferLink">Link to Sponsor</label>
						<input type="text" class="form-control" id="txtReferLink" name="txtReferLink">
					</div>
					<div class="form-group">
						<label for="txtImageLink">Sponsor Image</label>
						<input type="text" class="form-control" id="txtImageLink" name="txtImageLink">
					</div>
					<div class="form-group">
						<label for="txtDate">Sponsor Date</label>
						<input type="date" class="form-control" id="txtDate" name="txtDate">
					</div>
					<div class="form-check mt-3">
						<input type="checkbox" class="form-check-input checkmark" id="chkDeleted" name="chkDeleted">
						<label class="form-check-label" for="chkDeleted">Deleted?</label>
					</div>
					<button type="submit" class="btn btn-contact btn-contact-slim mt-4">Submit</button>
				</form>
			</div>
		</div>
	</div>
	<script src="/scripts/portal/sponsors/new.js"></script>
<%- include('../partials/footer') %>