<%- include('../partials/header') %>
<%  
	var dateFormatted= "";

	if (sponsor.sponsor_date) {
		var temp_date = new Date(sponsor.sponsor_date);
   		dateFormatted = temp_date.toISOString().split('T')[0];
	}
%>
	<div class="container">
		<div class="row mt-5">
			<div class="col-12">
				<h1>Edit Sponsor</h1>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row justify-content-center my-5 px-md-0 px-5">
			<div class="col-xs-10 col-md-10 form-container p-4">
				<h3 class="font-weight-bold mb-3">Edit Sponsor</h3>
				<form id="frm" action="/portal/sponsors/edit/<%= sponsor.id %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="txtName">Sponsor Name</label>
						<input type="text" class="form-control" id="txtName" name="txtName" value="<%=sponsor.name%>">
					</div>
					<div class="form-group">
						<label for="txtReferLink">Link to Sponsor</label>
						<input type="text" class="form-control" id="txtReferLink" name="txtReferLink" value="<%=sponsor.refer_url%>">
					</div>
					<div class="form-group">
						<label for="txtImageLink">Sponsor Image</label>
						<input type="text" class="form-control" id="txtImageLink" name="txtImageLink" value="<%=sponsor.image_url%>">
					</div>
					<div class="form-group">
						<label for="txtDate">Sponsor Date</label>
						<input type="date" class="form-control" id="txtDate" name="txtDate" value="<%=dateFormatted%>">
					</div>
					<div class="form-check mt-3">
						<input type="checkbox" class="form-check-input checkmark" id="chkDeleted" name="chkDeleted"<%=sponsor.deleted == true ? "checked" : ""%>>
						<label class="form-check-label" for="chkDeleted">Deleted?</label>
					</div>
					<button type="submit" class="btn btn-contact btn-contact-slim mt-4">Submit</button>
				</form>
			</div>
		</div>
	</div>
	<script src="/scripts/portal/sponsors/edit.js"></script>
<%- include('../partials/footer') %>